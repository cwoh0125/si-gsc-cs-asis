              <Column size="1200"/>
            </Columns>
            <Rows>
              <Row size="24" band="head"/>
              <Row size="24"/>
            </Rows>
            <Band id="head">
              <Cell text="NO"/>
              <Cell col="1" text="IVR 접속일시"/>
              <Cell col="2" text="상담사"/>
