function Btn_blbd_reply_onclick(obj:Button,  e:ClickEventInfo){	
	Txa_CTT.value	= "";
	Txa_CTT.setFocus();
	g_MODE = "R";
	
	ds_file.clearData();
	
	Edt_TITE.enable = false;
	Txa_CTT.enable = true;
	Btn_write.enable = false;
	Btn_save.enable = true;
	Btn_delete.enable = false;
	Btn_reply.enable = false;
	
